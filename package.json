{
  "name": "mastofeed",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.12.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "test": "npm run format:check",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/migrate.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "dotenv": "latest",
    "drizzle-orm": "latest",
    "express": "latest",
    "feed": "latest",
    "helmet": "latest",
    "masto": "latest",
    "node-cron": "latest",
    "pg": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "@types/express": "latest",
    "@types/node": "latest",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "latest",
    "prettier": "^3.7.4",
    "tsx": "latest",
    "typescript": "latest"
  }
}
